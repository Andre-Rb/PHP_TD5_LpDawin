{% set books_active = 1 %}
{% extends 'layout.html.twig' %}
    {#{{ dump(books) }}#}

{% block contents %}

    {% for book in books %}
        <a class="book" href="{{ path('viewBook',{'bookId': book.id } ) }}">
            {% if book.image %}
                <img src="{{ app.request.basepath }}/uploads/{{ book.image }}_small.jpg"/>
            {% endif %}
            <span class="t">{{ book.titre }} </span><br>
            <em>{{ book.auteur }}</em><br/>
        </a>
    {% endfor %}


{% endblock %}
